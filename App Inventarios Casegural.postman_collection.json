	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"const jar = pm.cookies.jar();",
					"",
					"jar.get(pm.collectionVariables.get(\"url\"), \"XSRF-TOKEN\", (error, cookie) => {",
					"    pm.request.addHeader({",
					"        key: \"X-XSRF-TOKEN\",",
					"        value: cookie",
					"    });",
					"",
					"    pm.request.addHeader({",
					"        key: \"Referer\",",
					"        value: pm.collectionVariables.get(\"url\")",
					"    });",
					"});"
				]
			}
		},
